---
interface Props {
	link: string;
	text: string;
	isExternal?: boolean;
}

const { link, text, isExternal } = Astro.props;
---

{
  isExternal ? (
    <a
      href={link}
      rel="noopener noreferrer"
      target="_blank"
      class="inline-block px-4 py-2 text-sm font-bold text-gray-800 uppercase bg-white hover:bg-black shadow hover:text-white duration-300"
    >
      {text}
    </a>
  ) : (
    <a
      href={link}
      class="inline-block px-4 py-2 text-sm font-bold text-gray-800 uppercase bg-white hover:bg-black shadow hover:text-white duration-300"
    >
      {text}
    </a>
  )
}
