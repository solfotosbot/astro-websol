---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Intro">
  <div class="min-h-[80vh] flex justify-start md:pt-20 items-center flex-col">
    <div class="w-72 mx-auto mt-3">
      <img
        src="https://images.ctfassets.net/ag8zf27wpki1/4KQSyaoW2tAEJzf8ak0EZB/05bb8954aad7a9e9eb2572ae6465303c/autoretratos_32.jpg?w=600&q=90"
        class="w-full h-auto"
      />
    </div>
    <div class="flex flex-col md:flex-row items-center gap-3 justify-center mt-3">
      <a
        href="/albums"
        class="inline-block px-4 py-2 text-sm font-bold text-gray-800 uppercase bg-white hover:bg-black shadow hover:text-white duration-300"
      >
        Portfolio personal
